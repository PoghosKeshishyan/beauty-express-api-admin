<h2><%= title %></h2>

<form method="post" action="/offers_items/create">
    <label>Image:</label><br>
    <input type="text" name="image"><br>

    <label>Descr:</label><br>
    <input type="text" name="descr"><br>

    <label>Price:</label><br>
    <input type="text" name="price"><br>

    <label>Btn text:</label><br>
    <input type="text" name="btn_text"><br>

    <label>Btn Url:</label><br>
    <input type="text" name="btn_url"><br>

    <button type="submit">Create</button>
</form>

<% if (error) { %>
    <p style="color:red;"><%= error %></p>
<% } %>